# Environment Configuration for FinVoice
# Copy this file to .env and configure with your actual values

# Basic Configuration
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/finvoice
ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/finvoice

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret-key
PLAID_ENV=sandbox

# Google Cloud Credentials (JSON file path or content)
GOOGLE_CLOUD_CREDENTIALS=/path/to/your/google-cloud-credentials.json

# Blockchain Configuration - Polygon Amoy Testnet
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology/
POLYGON_CHAIN_ID=80002
POLYGON_CURRENCY=POL
POLYGON_EXPLORER=https://amoy.polygonscan.com
PRIVATE_KEY=your-ethereum-private-key-for-signing-transactions
CONTRACT_ADDRESS=your-deployed-contract-address

# Trading Bot Integration
TRADING_BOT_API_URL=https://api.your-trading-bot.com
TRADING_BOT_API_KEY=your-trading-bot-api-key

# ML Models Path
MODEL_PATH=./ml_models

# Logging
LOG_LEVEL=INFO

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
