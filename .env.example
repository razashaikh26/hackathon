# FinVoice Production Environment Configuration

# Application Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-in-production
ENVIRONMENT=production

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.postgres.neon.tech/finvoice?sslmode=require
ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@ep-xxx.us-east-1.postgres.neon.tech/finvoice?sslmode=require

# Redis Configuration (Upstash)
REDIS_URL=rediss://username:password@xxx.upstash.io:6380

# Vapi AI Voice Configuration
VAPI_PRIVATE_KEY=your-vapi-private-key-backend-only
VAPI_PUBLIC_KEY=your-vapi-public-key-for-frontend
VAPI_ASSISTANT_ID=your-vapi-assistant-id
VAPI_PHONE_NUMBER=your-vapi-phone-number
VAPI_WEBHOOK_SECRET=your-webhook-secret

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# Blockchain Configuration
BLOCKCHAIN_PRIVATE_KEY=your-private-key-never-commit-this
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology/
POLYGON_CHAIN_ID=80002
WALLET_ADDRESS=0x...

# Market Data Configuration
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key

# Google Cloud Configuration (for TTS/STT fallback)
GOOGLE_CLOUD_CREDENTIALS_PATH=/path/to/credentials.json

# Demo Mode Configuration
DEMO_MODE=false
USE_MOCK_DATA=false

# Currency Conversion
EXCHANGE_API_KEY=your-exchange-rate-api-key

# Logging and Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
